# Default MySQL Configuration (my.cnf)

[mysqld]
# =========================================================
# 1. CHARACTER SETTINGS
# Ensure full compatibility for modern web apps (supports emojis, etc.)
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# =========================================================
# 2. INNODB OPTIMIZATION
# Tuned for a typical development machine.
innodb_buffer_pool_size = 512M
innodb_log_file_size = 128M

# =========================================================
# 3. RESOURCE LIMITS
max_allowed_packet = 64M
max_connections = 500

# =========================================================
# 4. STRICT MODE
# Enforce stricter SQL rules (highly recommended for development)
sql_mode = "STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION"

[client]
# Settings for MySQL client programs
default-character-set = utf8mb4
